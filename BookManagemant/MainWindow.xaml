        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="30" Margin="105,31,0,0" TextWrapping="Wrap" Text="hoangnv@gmail.com" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.496,-0.135"/>
